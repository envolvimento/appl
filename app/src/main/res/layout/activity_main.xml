<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <Button
        android:id="@+id/btnExercicio1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercício 1 - Maioridade"/>

    <Button
        android:id="@+id/btnExercicio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercício 2 - Calculadora"/>

    <Button
        android:id="@+id/btnExercicio3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercício 3 - Cadastro Loja"/>

    <Button
        android:id="@+id/btnExercicio4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercício 4 - Nome com CheckBox"/>

    <Button
        android:id="@+id/btnExercicio5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercício 5 - Preferências"/>

</LinearLayout>
